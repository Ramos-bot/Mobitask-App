entrypoint = "index.js"
modules = ["nodejs-22", "web"]
hidden = [".config", "package-lock.json", ".expo", "node_modules", ".git"]

run = "npm run replit:start"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "index.js", "app.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["sh", "-c", "npm run build:web && npx serve -s web-build -l 5000"]
deploymentTarget = "autoscale"
ignorePorts = false

[env]
NODE_ENV = "production"
PORT = "5000"
EXPO_USE_FAST_REFRESH = "false"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
syntax = "javascript"

[languages.javascript.languageServer]
start = ["typescript-language-server", "--stdio"]

[env]
EXPO_DEVTOOLS_LISTEN_ADDRESS = "0.0.0.0"
REACT_NATIVE_PACKAGER_HOSTNAME = "0.0.0.0"
NODE_ENV = "development"

[packager]
language = "nodejs"
ignoredPackages = ["unit_tests"]

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[unitTest]
language = "nodejs"
