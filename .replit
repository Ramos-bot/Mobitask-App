entrypoint = "server.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json", ".expo", "node_modules", ".git", "dist"]

run = "node server.js"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["sh", "-c", "npm ci && npm run build:web && node server.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 5000
externalPort = 80

[env]
NODE_ENV = "production"
PORT = "5000"
