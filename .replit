entrypoint = "server.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json", ".expo", "node_modules", ".git", "dist"]

run = "npm start"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["sh", "-c", "npm ci && npm run build:web && npm start"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Deploy Production"

[[workflows.workflow]]
name = "Deploy Production"
author = "mobitask"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run replit:deploy"

[[ports]]
localPort = 5000
externalPort = 80

[env]
NODE_ENV = "production"
PORT = "5000"
