modules = ["nodejs-20", "bash", "nix"]
hidden = [".config", "package-lock.json", ".expo", "node_modules", ".git", "dist"]
run = "node server.js"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "node server.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 5000
externalPort = 80

[env]
NODE_ENV = "production"
PORT = "5000"
